<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Site </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script type="text/javascript" src="~/js/site.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom-dark-with-shadow box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Site</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-link" asp-area="" asp-controller="Home" asp-action="Index">Foro</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-link" asp-area="" asp-controller="Home" asp-action="features">Updates</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-link" asp-area="" asp-controller="Home" asp-action="Privacy">Soporte</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-link" asp-area="" asp-controller="Home" asp-action="Ranking">Clasificación</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white-link" asp-area="" asp-controller="Home" asp-action="features">Jugabilidad</a>
                        </li>
                    </ul>
                </div>
                <div class="">
                    <ul class="navbar-nav flex-grow-1">
                        @if (TempData["TempLogin"] != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link-secondary text-white" asp-area="" asp-controller="Settings" asp-action="Index">Settings: @TempData["TempLogin"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="navbar-link-btn text-white" asp-area="" asp-controller="Home" asp-action="Logout">Desconectarse</a>
                            </li>
                            }
                            else
                            {
                            <li class="nav-item">
                                <a class="nav-link-secondary text-white" asp-area="" asp-controller="Home" asp-action="Login">LOGIN</a>
                            </li>
                            <li class="nav-item">
                                <a class="navbar-link-btn text-white" asp-area="" asp-controller="Home" asp-action="Register">PLAY FREE NOW</a>
                            </li>
                            }
                        </ul>
                </div>
            </div>
        </nav>
    </header>
    @RenderBody()


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - RoM2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
